<%- include('../partials/header.ejs') %>
</head>
<body>
<%- include('../partials/lodingScreen.ejs') %>
<%- include('../partials/navbar.ejs') %>

  <% if(currentUser !=undefined){ %>
    <% if (currentUser.role=='admin' ){ %>
      <div class="btn-addMovie">
        <a href="/movies/new" class="btn btn-primary my-2">Add new Movie</a>
      </div>
      <% } %>
        <% } %>
          <div class="container-showMovies">
            <div class="wrapImg">
              <% movies.forEach(function(movies){ %>
                <div class="img-movies" id="divImg-cover">
                  <i class="fa fa-heart"></i>
                  <a href="/movies/<%= movies._id %>" id="link-eachMovie">
                    <img src="<%= movies.image %>" id="img-cover" class='card-img-top'>
                  </a>
                  <p id="movie-name">
                    <%= movies.name %>
                  </p>
                  <div class="movieType">
                    <i class="fa fa-tag"></i>
                    <p id="movie-type">
                      <%= movies.type %>
                    </p>
                  </div>
                  <div class="movieTime">
                    <i class="fa fa-hourglass-half"></i>
                    <p id="movie-time">
                      <%= movies.time %> mins
                    </p>
                  </div>
                  <div class="movieSub">
                    <i class="fa fa-volume-up"></i>
                    <p id="movie-sub">
                      <%= movies.language %>
                    </p>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="/movies/<%= movies._id %>" class="btn btn-sm btn-outline-secondary">View</a>
                      <a href="/movies/<%= movies._id %>/review/new" class="btn btn-sm btn-outline-secondary">Review</a>
                    </div>
                  </div>
                </div>
                <% }); %>
            </div>
          </div>

          <%- include('../partials/footer.ejs') %>