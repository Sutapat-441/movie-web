<%- include('partials/secondHeader.ejs') %>
<div class="container my-5">
    
        <div class="row row1 no-gutters">
            <div class="col col-lg-5 col-6">
                <img class="imglogin-left" style="width: 500px;" src="/images/pic-login.jpg">
            </div>

            <div class="col col-7 px-5 pt-5 login-right">
                <h1 class="font-weight-bold py-5 text-center text-headlogin">Login Admin <i class="fa fa-user fs-3 text"></i></h1>
                <form action="/adminLogin" method="POST">
                    <div class="row justify-content-center py-2">
                        <div class="col-lg-7 form-floating">
                            <input type="text" class="form-control" name="username" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput">Username</label>
                        </div>
                    </div>
                    <div class="row justify-content-center py-2">
                        <div class="col-lg-7 form-floating">
                            <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                        </div>
                    </div>
                    <div class="row justify-content-center py-4">
                        <div class="col-lg-7">
                                <button class="btn-login mt-4 mb-5 justify-content-center rounded-pill" id="logInButton">Log In</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    
</div>


<%- include('partials/secondFooter.ejs') %>