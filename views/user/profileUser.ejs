<%- include('../partials/header.ejs') %>

<h1><%= user.firstname + ' ' + user.lastname %></h1>
<img src="<%= user.profileImage %>" width="300px">
<p><a href="mailto: <%= user.email %>"><%= user.eamail %></a></p>

<h3>Your Movies:</h3>
<ul>
    <% movies.foreach(function(movies){ %>
        <li><a href="/movies/<%= movies.id %>"><%= movies.name %></a></li>
    <% }); %>
</ul>
