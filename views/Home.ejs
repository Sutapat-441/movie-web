<%- include('partials/header.ejs') %>
</head>
<body>
<%- include('partials/navbar.ejs') %>
<div class="bottom-nav">
  <i class="fa fa-star"></i>
  <a href="#slide-rec" class="tab-anchor">Reccomend</a>
  <i class="fa fa-film"></i>
  <a href="#movies-lookUp" class="tab-anchor" id="movies-tab">Movies</a>
</div>
  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
        aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
        aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
        aria-label="Slide 3"></button>
    </div>

    <div class="carousel-inner" id="slide-rec">
      <div class="carousel-item active">
        <img src="https://chameleontk.github.io/assets/feats/kimi-no-na-wa+/Kimi-no-Na-wa-osthime.jpg"class="d-block w-100" id="pic-1">
        <div class="carousel-caption d-none d-md-block">
          <h5>First slide label</h5>
          <p>Some representative placeholder content for the first slide.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://i.pinimg.com/originals/d8/53/7f/d8537faa1e3ce7b8b75011eb14116ab4.png" class="d-block w-100">
        <div class="carousel-caption d-none d-md-block">
          <h5>Second slide label</h5>
          <p>Some representative placeholder content for the second slide.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://helenathailand.co/wp-content/uploads/2020/06/HelenaTemp_Ver3_30-06_salisa_V1cover_web.jpg"
          class="d-block w-100">
        <div class="carousel-caption d-none d-md-block">
          <h5>Third slide label</h5>
          <p>Some representative placeholder content for the third slide.</p>
        </div>
      </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>

  </div>

  <h3 id="now-showing">Now Showing</h3>
  <section id="movies-lookUp">
    <div class="container-showMovies">
      <div class="wrapImg">
        <% movies.forEach(function(movies){ %>
        <div class="img-movies" id="divImg-cover">
          <i class="fa fa-heart"></i>
          <a href="/movies/<%= movies._id %>" id="link-eachMovie">
            <img src="<%= movies.image %>" id="img-cover"
              class='card-img-top'>
          </a>
          <p id="movie-name"><%= movies.name %></p>
          <div class="movieType">
            <i class="fa fa-tag"></i>
            <p id="movie-type"><%= movies.type %></p>
          </div>
          <div class="movieTime">
            <i class="fa fa-hourglass-half"></i>
            <p id="movie-time"><%= movies.time %> mins</p>
          </div>
          <div class="movieSub">
            <i class="fa fa-volume-up"></i>
            <p id="movie-sub"><%= movies.language %></p>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
            <a href="/movies/<%= movies._id %>" class="btn btn-sm btn-outline-secondary">View</a>
            <a href="/movies/<%= movies._id %>/review/new" class="btn btn-sm btn-outline-secondary">Review</a>
              <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <%- include('partials/footer.ejs') %>