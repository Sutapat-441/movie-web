<%- include('partials/secondHeader.ejs') %>

  <div class="container my-5">
    
      <div class="row row1 no-gutters">
        <div class="col col-lg-5 col-6 ">
          <img class="imglogin-left"  style="max-width: 500px;" src="/images/pic-login.jpg">
        </div>

        <div class="col col-7 px-5 pt-5 signUp-right">
          <h1 class="font-weight-bold py-5 text-center text-headlogin" >Admin Register <i class="fa fa-user-plus fs-2 text"></i></h1>
        <form action="/regAdmin" method="POST">
          <div class="row justify-content-center py-1">
            <div class="col-lg-7 form-floating">
                <input type="text" class="form-control" id="floatingInput" name="username" placeholder="name@example.com">
                <label for="floatingInput">User name</label>
              </div>
            </div>
            <div class="row justify-content-center py-1">
              <div class="col-lg-7 form-floating">
                <input type="tel" class="form-control" id="floatingInput" name="phone" placeholder="name@example.com">
                <label for="floatingInput">Phone number</label>
              </div>
            </div>
            <div class="row justify-content-center py-1">
              <div class="col-lg-7 form-floating">
                <input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com">
                <label for="floatingInput">E-mail</label>
              </div>
            </div>
            <div class="row justify-content-center py-1">
              <div class="col-lg-7 form-floating">
                <input type="password" class="form-control" id="floatingInput" name="password" placeholder="name@example.com">
                <label for="floatingInput">Password</label>
              </div>
            </div>
            <div class="row justify-content-center button-area py-5">
              <div class="col-lg-7">
                <button class="btn-login mt-4 mb-5 justify-content-center rounded-pill" id="signUpButton">Sign Up</button>
              </div>
            </div>
        </form>
      </div>
  </div>
<%- include('partials/secondFooter.ejs') %>